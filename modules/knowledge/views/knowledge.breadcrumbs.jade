    h4 Main Class of Breadcrumbs
    mixin mainBreadcrumbs
  section.block-section-hash#breadcrumb-types-example
    h4 Breadcrumb Types
    mixin breadcrumbTypes
  section.block-section-hash#breadcrumb-sizes-example
    h4 Breadcrumb Sizes
    mixin breadcrumbSizes
  //-section.block-section-hash#breadcrumb-looks-example
    h4 Breadcrumb Looks
    mixin breadcrumbLooks
  //-section.block-section-hash#breadcrumb-display-example
    h4 Breadcrumb Display
    mixin breadcrumbDisplay

  

