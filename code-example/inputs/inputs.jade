mixin mainInputs
  div.code-example
    h6 Code: 
    pre
      code(class="language-html", prism)
        :code
          <p>.input > input</p>
          <div class="input">
            <input type="text" placeholder="Normal">
          </div>
          <p>.input.input-invalid > input.input-invalid</p>
          <div class="input input-invalid">
            <input type="text" placeholder="Invalid" class="input-invalid">
          </div>
          <p>.input.input-disabled > input.input-disabled</p>
          <div class="input input-disabled">
            <input type="text" placeholder="Disabled" class="input-disabled" disabled="disabled">
          </div>
          

  div.code-result
    h6 Result:
    p .input > input
    .input
      input(type='text', placeholder='Normal')
    p .input.input-invalid > input.input-invalid
    .input.input-invalid
      input.input-invalid(type='text', placeholder='Invalid')
    p .input.input-disabled > input.input-disabled
    .input.input-disabled
      input.input-disabled(type='text', placeholder='Disabled', disabled='disabled')


